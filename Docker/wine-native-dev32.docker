FROM i386/ubuntu:18.04

ARG DEBIAN_FRONTEND="noninteractive"

RUN sed -i 's/# \(deb-src .* universe\)/\1/;s/archive.ubuntu.com/mirror.internode.on.net\/pub\/ubuntu/' /etc/apt/sources.list
COPY 01proxy /etc/apt/apt.conf.d
RUN apt-get update
RUN apt-get build-dep wine -y
RUN apt-get install libvulkan-dev libsdl2-dev -y

CMD [ "/bin/bash", "--login" ]
